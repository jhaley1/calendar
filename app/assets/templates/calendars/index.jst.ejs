<!-- app/assets/templates/calendars/index.jst.ejs -->

<button id="new-event">CREATE</button>

<% calendars.each(function (calendar) { %>
  <button id="show-cal"
    data-id="<%= calendar.get("id") %>"
    class="display-cal-button cal-button-<%= calendar.get("id") %>">
    <%= calendar.get("name") %></button>
<% }); %>


<h1>
  <button id="last-month"><</button>
  <button id="next-month">></button>
  <%= month %>
</h1>

<% _(Cal._dayNames).each(function (dayName) { %>
  <div class="day-name"><%= dayName %></div>
<% }); %>
<br><br><br>

<% _(daysInMonth).each(function (day) { %>
  <% if (day === 1) { %>
    <% var index = Cal._dayNames.indexOf(dayOfWeek); %>
    
    <% for (var i = index; i > 0; i--) { %>
      <div class="calendar-day"></div>
    <% } %>
  <% } %>
  
  
  <div class="calendar-day">
    <font id="day-num"><%= day %></font>    
    <% calendars.each(function (calendar) { %>
      <% calendar.get("events").each(function (event) { %>
        <div class="event">
          <% var eventDate = new Date (event.get("start_date")); %>
          <% var eventDay = eventDate.getDate(); %>
          <% var eventMonthNum = eventDate.getMonth(); %>
          <% var eventMonth = Cal._monthNames[eventMonthNum] %>
          <% var eventYear = eventDate.getFullYear(); %>
      
          <% if ((eventDay === day) 
            && (eventMonth == month) 
            && (eventYear == year)) { %>
            <% var cId = calendar.escape("id") %>
            <% var eId = event.escape("id") %>
            <a href="#/calendars/<%= cId %>/events/<%= eId %>/edit"
              id="event-link">
              <div id="event" 
                class="cal-<%= calendar.get("id") %>">
                <%= event.escape("title") %>
              </div>
            </a>
          <% } %>
        </div>
      <% }); %>
    <% }); %>
  </div>
  
  <% if (day === lastDayOfMonth) { %>
    <% var index = Cal._dayNames.indexOf(lastWeekday) + 1; %>
    
    <% for (var i = index; i < 7; i++) { %>
      <div class="calendar-day"></div>
    <% } %>
  <% } %>
  
<% }); %>
