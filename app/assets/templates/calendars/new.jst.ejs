<h1>Create a new calendar</h1>

<% var user_id = JSON.parse($("#user_id_json").html()); %>

<form class="calendar-form">
  <input
    type="hidden"
    name="calendar[user_id]"
    value="<%= user_id %>">
  
  <label for="calendar_name"><h4>Name</h4></label>
  <input type="text" 
    id="calendar_name" 
    name="calendar[name]" 
    placeholder="Untitled calendar"
    size="60"
    class="accepts-data"
    value="<%= calendar.escape("title") %>">
  <br>
  
  <h4>Display Label Color</h4>
  <div class="align-radio">
    <div class="form-radio">
      <input type="radio"
        id="calendar_display_id_yellow"
        name="calendar[display_id]"
        value="1">
    </div>
    <div class="form-radio-text">
      <label for="calendar_display_id_yellow">
        <div id="cal-yellow-box"> </div>
      </label>
    </div>
  </div>
  <br>
  
  <div class="align-radio">
    <div class="form-radio">
      <input type="radio"
        id="calendar_display_id_purple"
        name="calendar[display_id]"
        value="2">
    </div>
    <div class="form-radio-text">
      <label for="calendar_display_id_purple">
        <div id="cal-purple-box"> </div>
      </label>
    </div>
  </div>
  <br>
  
  <div class="align-radio">
    <div class="form-radio">
      <input type="radio"
        id="calendar_display_id_blue"
        name="calendar[display_id]"
        value="3">
    </div>
    <div class="form-radio-text">
      <label for="calendar_display_id_blue">
        <div id="cal-blue-box"> </div>
      </label>
    </div>
  </div>
  <br>

  <div class="align-radio">
    <div class="form-radio">
      <input type="radio"
        id="calendar_display_id_red"
        name="calendar[display_id]"
        value="4">
    </div>
    <div class="form-radio-text">
      <label for="calendar_display_id_red">
        <div id="cal-red-box"> </div>
      </label>
    </div>
  </div>
  <br>
  
  <div class="align-radio">
    <div class="form-radio">
      <input type="radio"
        id="calendar_display_id_green"
        name="calendar[display_id]"
        value="5">
    </div>
    <div class="form-radio-text">
      <label for="calendar_display_id_green">
        <div id="cal-green-box"></div>
      </label>
    </div>
  </div>
  <br>
  
  <button id="back-to-cal"><</button>
  <input type="submit" id="save" value="SAVE">
  
  <% if (!this.model.isNew()) { %>
    <button id="discard">Discard</button>
  <% } %>
</form>