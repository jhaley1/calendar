<!-- app/views/users/new.html.erb -->

<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  
  <input type="datetime-local" name="date">
  
  <input type="radio" 
    id="event_recurring_true" 
    name="event[recurring]"
    value="true">
  <input type="radio" 
    id="event_recurring_true" 
    name="event[recurring]"
    value="false">
  <br>
  
  <%= f.submit %>
<% end%>